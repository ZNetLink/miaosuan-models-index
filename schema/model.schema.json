{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://znetlink.com/miaosuan-model-index/schema/model.schema.json",
  "title": "Model Descriptor",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "author", "description", "license", "labels", "versions", "repo_url"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "repo_url": { "type": "string", "format": "uri" },
    "author": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 100 },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "description": { "type": "string", "minLength": 1, "maxLength": 2000 },
    "homepage": { "type": "string", "format": "uri" },
    "repository": { "type": "string", "format": "uri" },
    "license": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "labels": {
      "type": "array",
      "minItems": 0,
      "uniqueItems": true,
      "items": { "type": "string", "minLength": 1, "maxLength": 50 }
    },
    "versions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["version", "url", "checksum", "date"],
        "properties": {
          "version": {
            "type": "string"
          },
          "url": { "type": "string", "format": "uri" },
          "checksum": {
            "type": "string",
            "pattern": "^(?:sha256:)?[0-9a-fA-F]{64}$"
          },
          "date": { "type": "string", "format": "date" },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
